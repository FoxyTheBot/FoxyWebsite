<html>

<head>
    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-7726590371480649"
        crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/styles/header.css">
    <link rel="icon" href="/assets/images/foxycake.png">
    <title>
        Gerenciar Chaves
    </title>
    <link rel="stylesheet" href="/styles/dashboard.css" type="text/css">
    <link rel="stylesheet" href="/styles/footer.css" type="text/css">
</head>

<body>
    <header>
        <nav class="navigation-bar fixed" data-preload-persist="true" id="navigation-bar">
            <div class="left-entries">
                <div class="entry foxy-navbar-logo">
                    <a href="/"><img src="/assets/images/Foxy.png" style="font-size: 0px;
                        line-height: 0px;
                        width: 40px;
                        height: 40px;
                        position: absolute;
                        top: 3px;
                        border-radius: 100%;">
                    </a>
                </div>
                <div class="entry">
                    <a href="/br/support" class="menu" data-preload-link="true"
                        data-preload-link-activated="true">Suporte</a>
                </div>
                <div class="entry">
                    <a href="/br/support/terms" class="menu" data-preload-link="true"
                        data-preload-link-activated="true">Termos</a>
                </div>
                <div class="entry">
                    <a href="/upvote" class="menu">Votar</a>
                </div>
                <div class="entry"><a href="/br/premium" class="menu">
                        Premium
                    </a></div>
                <div class="entry"><a href="/br/commands" class="menu">
                        Comandos
                    </a></div>
            </div>
            <div class="right-entries">
                <div class="entry">
                    <a class="theme-changer" id="theme-changer-button">
                        <span></span>
                        <span style="display: none;"></span>
                    </a>
                </div>
                <div class="entry" id="locale-changer-button" style="cursor: default;"></div>
                <div class="entry">
                    <a href="/br/dashboard" id="login-button">
                        <img src="https://cdn.discordapp.com/avatars/<%= user.id %>/<%= user.avatar %>.png" style="font-size: 0px;
                            line-height: 0px;
                            width: 40px;
                            height: 40px;
                            position: absolute;
                            top: 3px;
                            border-radius: 100%;">
                        <div style="font-size: 0px;
                            line-height: 0px;
                            width: 40px;
                            visibility: hidden;
                            height: 0px;
                            display: inline-block;"></div>
                        <span style="padding-left: 4px;">
                            <%= user.global_name %>
                        </span>
                    </a>
                </div>
            </div>
        </nav>
        <button id="menu" class="mobile">Menu</button>
    </header>

    <div id="mobile__menu" class="overlay">
        <a class="close">&times;</a>
        <div class="overlay__content">
            <a href="/github">GitHub</a>
            <a href="/discord">Suporte</a>
            <a href="/br/support/terms">Termos de uso</a>
            <a href="/br/dashboard">Dashboard</a>
        </div>
    </div>
    <main>
        <h1 class="title">Gerenciar chaves</h1>
        <h3 class="description">Adicione chaves premium para ativar o premium no seu servidor</h3>

        <div class="current-key">
            <h3 class="field-title">Chave atual:</h3>
            <% if (guild.premiumKey) { %>
                <div class="current-key__content">
                    <p class="current-key__content__key"><%= guild.premiumKey.content %></p>
                    <p class="current-key__content__expires">Expira em: <%= guild.premiumKey.expiresAt %></p>
                </div>
            <% } else { %>
                <img class="current-key__no-key__image" src="/assets/images/foxycry.png">
                <p class="current-key__no-key">Está vazio aqui, o que acha de colocar algo</p>
            <% } %>
        </div>
        <div class="page-separator">
            <hr>
        </div>
        <div class="user-avaliable-keys">
            <h3 class="field-title" style="
                text-align: center;
                margin-left: 7.8%;
                ">Chaves disponíveis:</h3>
            <% if (userInfo.premiumKeys.length > 0) { %>
                <% userInfo.premiumKeys.forEach(key => { %>
                    <div class="user-avaliable-keys__key">
                        <p class="user-avaliable-keys__key__content"><%= key.content %></p>
                        <p class="user-avaliable-keys__key__expires">Expira em: <%= key.expiresAt %></p>
                        <form action="/br/servers/<%= guild.id %>/keys" method="POST">
                            <input type="hidden" name="key" value="<%= key.content %>">
                            <button class="user-avaliable-keys__key__button">Usar</button>
                        </form>
                    </div>
                <% }) %>
            <% } else { %>
                <img class="user-avaliable-keys__no-key__image" src="/assets/images/foxycry.png">
                <p class="user-avaliable-keys__no-key">Está vazio aqui, o que acha de colocar algo</p>
            <% } %>
        </div>
        <div class="left-sidebar">
            <div class="entries">
                <hr class="separator">
                <h2 class="section-title">Automações</h2>
                <a href="/br/servers/<%= guild.id %>/">
                    <div class="entry">
                        Bloqueador de Convites
                    </div>
                </a>
                <a href="/br/servers/<%= guild.id %>/autorole">
                    <div class="entry">
                        Autorole
                    </div>
                </a>
                <a href="/br/servers/<%= guild.id %>/welcome">
                    <div class="entry">
                        Mensagem de entrada/saída
                    </div>
                </a>
                <hr class="separator">
                <h2 class="section-title">Miscelâneas</h2>

                <a href="/br/servers/<%= guild.id %>/keys">
                    <div class="entry" id="selected">
                        Gerenciar chaves premium
                    </div>
                </a>

                <a href="/br/servers/<%= guild.id %>/command-manager">
                    <div class="entry">
                        Gerenciador de comandos
                    </div>
                    <hr class="separator">
                    <a href="/logout">
                        <div class="entry">
                            Sair
                        </div>
                    </a>
            </div>
        </div>
    </main>
</body>

</html>