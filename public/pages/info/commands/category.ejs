<!DOCTYPE html>
<html>

<head>
  <title>Foxy | Comandos de <%= category %></title>
  <link rel="stylesheet" href="/styles/header.css">
  <link rel="stylesheet" href="/styles/readonly.css">
  <link rel="stylesheet" href="/styles/footer.css">
  <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-7726590371480649"></script>
  <link rel="icon" href="/assets/images/foxycake.png">
</head>

<body>
  <%- include('../../global/header') %>

  <main>
    <h1 class="commands-title"><%= category %></h1>
    <div style="display: flex; justify-content: center; margin: 20px 0;">
      <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-7726590371480649"
        crossorigin="anonymous"></script>
      <ins class="adsbygoogle" style="display:inline-block;width:500px;height:100px"
        data-ad-client="ca-pub-7726590371480649" data-ad-slot="1499611127"></ins>
      <script>
        (adsbygoogle = window.adsbygoogle || []).push({});
      </script>
    </div>

    <div class="command-section">
      <table class="command-table">
        <tr>
          <th>Comando</th>
          <th>Descrição</th>
        </tr>
        <% commands.filter(command => !command.commandName.includes(' ')).forEach(command => { %>
        <tr>
          <td>/<%= command.commandName %></td>
          <td><%= command.description %></td>
        </tr>
        <% }); %>
      </table>
    </div>

    <% 
      const contextCommands = commands.filter(command => command.commandName.includes(' '));
      if (contextCommands.length > 0) { 
    %>
    <div class="command-section">
      <h2 class="command-category-name">Comandos de Contexto</h2>
      <table class="command-table">
        <tr>
          <th>Comando</th>
          <th>Descrição</th>
        </tr>
        <% contextCommands.forEach(command => { %>
        <tr>
          <td><%= command.commandName %></td>
          <td><%= command.description %></td>
        </tr>
        <% }); %>
      </table>
    </div>
    <% } %>

    <%- include("commandSidebar.ejs"); %>
  </main>
</body>

<script src="../js/HeaderMobile.js"></script>

</html>
