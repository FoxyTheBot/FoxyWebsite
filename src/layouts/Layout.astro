---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.png" />
		<script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-7726590371480649"
		crossorigin="anonymous"></script>
		<meta name="generator" content={Astro.generator} />
		<meta property="og:type" content="website">
		<meta content={title} property="og:title" />
		<meta content="#e7385d" data-react-helmet="true" name="theme-color" />
		<meta content="OlÃ¡, Eu sou a Foxy! Um bot de economia e entretenimento para o seu servidor do Discord!"
		property="og:description" />
		<meta content="/Foxy.png" property="og:image" />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	@import url(https://fonts.googleapis.com/css2?family=Pacifico&display=swap);

	body {
		background-color: #31182a;
	}

	* {
		box-sizing: border-box;
		margin: 5;
		padding: 0;
		text-decoration: none;
	}

	.navigation-bar {
		width: 100%;
		height: 46px;
		position: fixed;
		opacity: 0.9;
		text-shadow: 0 1px rgb(0 0 0 / 20%);
		font-family: Pacifico !important;
		line-height: 1;
		display: flex;
		flex-direction: row;
		z-index: 1;
		-webkit-backdrop-filter: blur(10px);
		backdrop-filter: blur(10px);
	}

	.navigation-bar .entry a {
		color: #f2f2f2 !important;
		text-decoration: none;
	}

	.navigation-bar .left-entries {
		display: flex;
		justify-content: space-evenly;
		flex-grow: 1;
		flex-flow: wrap;
		overflow: hidden;
	}

	.navigation-bar .right-entries {
		display: flex;
		justify-content: flex-end;
	}

	.navigation-bar .entry {
		float: left;
		display: block;
		color: #f2f2f2 !important;
		text-align: center;
		padding: 14px 16px;
		text-decoration: none;
		font-size: 17px;
		transition: 0.5s;
		cursor: pointer;
		white-space: nowrap;
		position: relative;
	}

	.navigation-bar .entry a {
		transition: 0.3s;
		color: white !important;
	}

	.navigation-bar .entry a:hover {
		color: rgb(221, 221, 221) !important;
		text-decoration: none;
	}

	.fab {
		font-family: "Font Awesome 5 Brands";
	}

	.fa,
	.fab,
	.fal,
	.far,
	.fas {
		-moz-osx-font-smoothing: grayscale;
		-webkit-font-smoothing: antialiased;
		display: inline-block;
		font-style: normal;
		font-variant: normal;
		text-rendering: auto;
		line-height: 1;
	}

	nav.navigation-bar.fixed {
		position: fixed;
	}

	nav.navigation-bar .left-entries {
		display: flex;
		flex-grow: 1;
		flex-flow: wrap;
		flex-direction: initial;
		flex-wrap: wrap;
		overflow: hidden;
		overflow-x: hidden;
		overflow-y: hidden;
	}

	.icon {
		display: inline-block;
		width: 1em;
		height: 1em;
		stroke-width: 0;
		stroke: currentColor;
		fill: currentColor;
		font-size: inherit;
		color: inherit;
		vertical-align: -0.125em;
		margin-top: 5px;
	}

	nav#navigation-bar .icon {
		filter: drop-shadow(0 1px rgba(0, 0, 0, 0.2));
	}

	#login-button {
		display: none;
	}

	nav.navigation-bar {
		top: 0px;
		width: 100%;
		height: 46px;
		opacity: 100%;
		text-shadow: 0 1px rgb(0 0 0 / 20%);
		font-family: Pacifico, !important;
		line-height: 1;
		z-index: 999;
		display: flex;
		flex-direction: row;
		position: relative;
	}

	/* Mobile Nav */

	.mobile {
		display: none;
		color: #fff;
		background-color: #1d9ae4;
		font-family: Montserrat;
		font-size: 15px;
		cursor: pointer;
		padding: 10px 12px 10px 12px;
		border-radius: 5px;
		border: none;
		margin: 20px 5px 10px 5px;
		transition-duration: 0.5s;
	}

	.overlay {
		height: 100%;
		width: 0;
		position: fixed;
		z-index: 1;
		left: 0;
		top: 0;
		background-color: #24252a;
		overflow-x: hidden;
		transition: all 0.5s ease 0s;
	}

	.overlay--active {
		width: 100%;
	}

	.overlay__content {
		display: flex;
		height: 100%;
		flex-direction: column;
		align-items: center;
		justify-content: center;
	}

	.overlay a {
		padding: 15px;
		font-size: 36px;
		display: block;
		transition: all 0.3s ease 0s;
	}

	.overlay a:hover,
	.overlay a:focus {
		color: #0088a9;
	}

	.overlay .close {
		position: absolute;
		top: 20px;
		right: 45px;
		font-size: 60px;
		color: #edf0f1;
		cursor: pointer;
	}

	.overlay__content a {
		font-family: "Montserrat", sans-serif;
		font-weight: 500;
		color: #edf0f1;
		text-decoration: none;
	}

	@media screen and (max-height: 450px) {
		.overlay a {
			font-size: 20px;
		}

		.overlay .close {
			font-size: 40px;
			top: 15px;
			right: 35px;
		}
	}

	@media only screen and (max-width: 800px) {
		nav.navigation-bar {
			display: none;
		}

		.mobile {
			display: initial;
		}
	}

	footer .social-networks {
		gap: 0.25em;
		display: flex;
		justify-content: center;
		font-size: 3em;
	}

	footer a {
		color: white;
	}

	.footer-add h2 {
		font-family: Montserrat;
		font-size: 130%;
		margin-left: auto;
		margin-right: auto;
		margin-bottom: 1%;
		margin-top: 10px;
		color: #e7385d;
	}

	.footer-add a button {
		-webkit-appearance: none;
		-moz-appearance: none;
		appearance: none;
		align-items: center;
		justify-content: center;
		border: none;
		outline: none;
		font-family: Roboto, sans-serif;
		line-height: 20px;
		font-size: 17px;
		color: #fff;
		min-width: 36px;
		margin-left: 1.5%;
		padding: 0.55rem 1rem;
		box-sizing: border-box;
		border-radius: 4px;
		cursor: pointer;
		text-decoration: none;
		background: #3ba55c;
		animation: float 5s ease-in-out infinite;
	}

	footer {
		background-color: #e7385d;
		color: white;
		padding: 16px 72px;
		overflow: hidden;
		font-family: Arial;
		position: relative;
		margin-top: auto;
	}
</style>
